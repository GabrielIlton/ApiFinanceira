                    },
                    "password": {
                        "type": "string"
                    },
                    "endereco": {
                        "rua": {
                            "type":"string"
                        },
                        "bairro":{
                            "type":"string"
                        },
                        "numero": {
                            "type":"number"
                        }   
                    },
                    "telefone":{
                        "type": "number"
                    }
                }
            },
            "RetrieveAccount": {
                "type": "object",
                "properties": {
                    "cpf": {
                        "type": "number"
                    }
                }
            },
            "StatementAll": {
                "type": "object",
                "properties": {
                    "_id": "string"
                }
            },
            "StatementOne": {
                "schema": {
                    "Statement":{
                        "type": "object",
                        "properties": {
                            "accountId": "string"
                        }
                    }
                }
            },
            "Deposit": {
                "schema": {
                    "Deposit":{
                        "type": "object",
